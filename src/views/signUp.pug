extends layouts/main

block content
  .form-container
    form(action=routes.signUp, method="post" enctype="multipart/form-data")
      .fileUpload
        label(for="avatar") Avatar
        input(type="file", name="avatar", id="avatar", accept="image/*")
      input(type="text", placeholder="Full name", name="username" required=true)
      input(type="email", placeholder="Email", name="email" required=true)
      input(type="password", placeholder="Password", name="password" required=true)
      input(type="password", placeholder="Verify password", name="password2" required=true)
      input(type="submit", value="Sign up")
  button
    a(href=routes.home) Back